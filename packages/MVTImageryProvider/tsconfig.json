{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
  "types": [
    "node"
  ]
}